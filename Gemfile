source "https://rubygems.org"

gem "jekyll"

group :jekyll_plugins do
    # RSS Feed Generation
    gem "jekyll-feed"

    # i18n Support
    gem "jekyll-polyglot"
end

# WebP Generator
# https://github.com/sverrirs/jekyll-webp
gem "jekyll-webp"

# Asset Pipeline - Minify & compresses assets
# https://github.com/matthodan/jekyll-asset-pipeline
gem "jekyll_asset_pipeline"
gem "sass"
gem "yui-compressor"

